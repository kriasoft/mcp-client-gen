{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.words": [
    "codegen",
    "esbenp",
    "introspector",
    "konstantin",
    "kriasoft",
    "modelcontextprotocol",
    "pkce",
    "segoe",
    "streamable",
    "tarkus"
  ],
  "cSpell.ignorePaths": [
    ".git/**",
    "node_modules/**",
    "dist/**",
    "test-fixtures/**"
  ]
}
