{
  "name": "mcp-client-gen",
  "version": "0.0.4",
  "description": "Interactive CLI tool that generates type-safe TypeScript clients from MCP servers",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-client-gen": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "mcp-client",
    "client",
    "generator",
    "sdk",
    "codegen",
    "anthropic",
    "cli",
    "interactive",
    "typescript",
    "api-client",
    "prompts",
    "schema",
    "tool",
    "type-safe",
    "model-context-protocol",
    "oauth",
    "oauth2",
    "authentication",
    "pkce",
    "rfc7591"
  ],
  "author": "Konstantin Tarkus <koistya@kriasoft.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/koistya",
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/mcp-client-gen.git"
  },
  "homepage": "https://github.com/kriasoft/mcp-client-gen",
  "bugs": {
    "url": "https://github.com/kriasoft/mcp-client-gen/issues"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "oauth-callback": "^1.2.0",
    "ts-morph": "^26.0.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "endOfLine": "lf"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --sourcemap",
    "clean": "rm -rf dist",
    "test": "bun test src",
    "test:e2e": "bun test test/e2e",
    "test:all": "bun test",
    "typecheck": "bun tsc -p tsconfig.json --noEmit",
    "format": "bun prettier --write .",
    "format:check": "bun prettier --check .",
    "validate": "bun run format:check && bun run typecheck && bun run test:all",
    "prepublishOnly": "bun run build"
  }
}
